<Window x:Class="StoreApp.UI.WPF.Windows.PopularityView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoreApp.UI.WPF.Windows"
        mc:Ignorable="d"
        Title="PopularityView" Height="450" Width="350" Background="#b3e4fc">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.6*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding Info}"
                   Grid.Row="1"
                   HorizontalAlignment="Center"
                   Style="{StaticResource tbStandartStyle}"/>

        <Button Content="Ok"
                Click="BtnOk_Click"
                VerticalAlignment="Bottom" HorizontalAlignment="Center"
                Grid.Row="12"
                Width="100" Height="40"
                Style="{StaticResource btnStandartStyle}"
                Margin="0 0 0 20"/>
    </Grid>
</Window>
